{% comment %}
  Iterates over each entry in the metaobject: TCG to render a clickable image tile
{% endcomment %}



{% assign tcg_list = metaobjects.tcg.values %}

<style>
    .horizontal-card-image{
    object-fit: cover;
    }

  .flex-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px; }

  .tcg-card {
    margin: 20px;
    width: 950px;
    height: 500px;
    display: flex;
    background: rgba(255,255,255);
    justify-content: center;
    align-items:center;
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    transition: all 0.5s ease;
    box-shadow: 0 2px 10px 5px rgba(0, 0, 0, 0.1);
  }

  /* Holographic overlay */
  .tcg-card::before {
    content: "";
    position: absolute;
    top: -200%;
    left: -200%;
    width:500%;
    height: 400%;
    background: linear-gradient(
      0deg,
      transparent,
      rgba(255, 0, 255, 0.3) 0%,
      rgba(0, 255, 255, 0.5) 25%,
      rgba(0,255, 0, 0.3) 50%,
      rgba(255, 255, 0, 0.4) 75%,
      rgba(255, 0, 255, 0.3) 100% );
    transform: rotate(-45deg);
    opacity: 0;
    transition: all 0.65s ease;
  }


  /* Hover effect - shadow */
  .tcg-card:hover {
    transform: scale(1.05);
    box-shadow: 0 2px 10px 5px rgba(0, 0, 0, 0.3);
  }

  /*Hover effect - Visible holographic */
  .tcg-card:hover::before {
    opacity: 1;
    transform: rotate(-45deg) translateY(100%);
  }

</style>

<div class="flex-grid page-width">
  {% for tcg in tcg_list %}
    <div class="tcg-card">
       <img
          class="horizontal-card-image"
          src="{{ tcg.image | image_url: width: '750', height: '500'  }}"
          width=100%
          height=100%
        >
    </div>
  {% endfor %}
</div>
