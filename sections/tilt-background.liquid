{% 
    assign 
    tcg_list = metaobjects.tcg.values
%}

{% style %}

.dark-section::before{
    content: "";
    position: fixed;
    inset: 0;
    background: url('https://cdn.shopify.com/s/files/1/0903/9629/5493/files/pattern-geometric-1.png?v=1756404257') repeat;
    background-size: auto, cover;
    opacity: 0.2;
    pointer-events: none;
    z-index: 0;
    height: 100%;
    width: 100%;
}
    

    .dark-section {
    background: #1c1e2f ;
    background-size: auto,cover;
    padding-top: 50px;
    padding-bottom: 50px;
    }
 
.container-with-pattern{
  background: #1c1e2f;
  margin-top: 50px;
}


    .content-container-padded {
      position: relative;
      display: flex;
      justify-content: center;
      background: #1c1e2f ;
      width: 100%;
      height: 550px;
      margin-top: 20px;
      margin-bottom: 20px;
      opacity: 1;
      box-shadow: 10px 10px #2c3a57;;
      border: 3px;
      border-style: solid;
      border-color: #000;
      border-radius: 10px;


    }

    .content-column{
      padding-left: 8%;
      padding-right: 8%;
    }
       

.wide-card {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  padding: 8px;
  z-index: 1;
}

.wide-card:before {
  border-radius:10px;
}


.card__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
  width: 100%;
  height: 100%;
  padding: 8px;
  box-sizing: border-box;
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
}

.wide-card:hover .card__content {
  transform: translate(-50%, -50%) rotate(0deg);
  opacity: 1;
}

.card-content-inner {
    background: #FFF;
    opacity: 0.8;
    width: 100%;
    height: 100%;
    border-radius: 10px;
    padding: 10px;
}

.text-container {
    opacity: 1; 
}

.card__title {
  margin: 0;
  font-size: 24px;
  color: #000;
  font-weight: 700;
}

.card__description {
  margin: 10px 0 0;
  font-size: 14px;
  color: #000;
  line-height: 1.4;
}

.horizontal-card-image{
    object-fit: cover;
    border-radius: 10PX;
    }


.content_column {
      background: #1c1e2f ;

}


{% endstyle %}
{% comment %}
Add section for each tcg in list
{% endcomment %}
<section class="dark-section">
{% for tcg in tcg_list %}
  <div class="container-with-pattern">
    {% assign primary_colour = tcg.primary_colour.value %}
    {% assign secondary_colour = tcg.secondary_colour.value %}
<div class="content-column page-width">
<div class="content-container-padded "
style="box-shadow: 10px 10px {{ primary_colour }}"
>

<div class="wide-card"
style="background: linear-gradient(-45deg, {{ secondary_colour }}  0%, {{ primary_colour }} 100%);">
    <img
          class="horizontal-card-image"
          src="{{ tcg.image | image_url: width: '750', height: '500'  }}"
          width=100%
          height=100%
        />
  <div class="card__content"
style="background: linear-gradient(-45deg, {{ secondary_colour }} 0%, #ffffff 50%, {{ primary_colour }} 100%);">
<div class= "card-content-inner">
<div class="text-container">
    <p class="card__title">Card Title</p>
    <p class="card__description">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
      veniam, quis nostrud exercitation ullamco.
    </p>
    </div>
</div>
  </div>
</div>
</div>
</div>
</div>

  {% endfor %}
    </section>

