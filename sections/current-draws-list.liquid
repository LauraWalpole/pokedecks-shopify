{{ 'spotlight-collection.css' | asset_url | stylesheet_tag }}

{% liquid
  assign lottery-0 = metaobjects.pok_lottery['lottery-0']
  assign lottery-1 = metaobjects.pok_lottery['lottery-1']
  assign lottery-2 = metaobjects.pok_lottery['lottery-2']
  assign section_title = metaobjects.section_content['lottery-list'].title
  assign section_caption = metaobjects.section_content['lottery-list'].caption
  assign section_description = metaobjects.section_content['lottery-list'].description
%}

<section class="section-dark">
  <div class="isolate page-width">
    <div class="section-heading">
      <h2 class="section-caption">{{ section_caption }}</h2>
      <h1 class="section-title-light">{{ section_title }}</h1>
      <p class="section-subtext-light">{{ section_description }}</p>
    </div>
    <!-- Primary Lottery -->
    <section class="spotlight-section status-{{ lottery-0.status.value | handle }}">
      <div class="status-banner">
        <span class="status-value">{{ lottery-0.status.value }}</span>
      </div>
      <div class="spotlight-wrapper">
        <!-- Full-width heading row -->
        <div class="spotlight-heading-row">
          <h2 class="spotlight-heading">{{ lottery-0.heading.value }}</h2>
        </div>

        <!-- Two-column row -->
        <div class="spotlight-content-row">
          <!-- Image Column -->
          <div class="spotlight-column first-column">
            <div class="spotlight-image-wrapper">
              <img
                src="{{ lottery-0.image | image_url: width: auto, height: auto }}"
                alt="Expansion Image"
                class="spotlight-image"
              >
            </div>
          </div>

          <!-- Text Column -->
          <div class="spotlight-column last-column">
            <div class="spotlight-text">
              <p class="spotlight-description">
                {{ lottery-0.description.value }}
              </p>
            
            {% if lottery-0.status.value  == 'Entries now open' %}
            <div class="spotlight-button-wrapper">
              <p class="spotlight-description">Available to enter until <strong>{{ lottery-0.end_date | metafield_tag }}</strong></p>
              <a href="{{ lottery-0.page.value.url }}" class="spotlight-button">View</a>
              </div>
              {% elsif lottery-0.status.value  == 'Entries now closed'%}
              <p class="spotlight-description">
                This draw is now closed. Winners will be contacted by email - Good luck!
              </p>
              {% elsif lottery-0.status.value  == 'Available soon'%}
              <p class="spotlight-description">
                We plan to open entries to this draw <strong>{{ lottery-0.start_date.value }}</strong>. Sign up for our mailing list to be notified when the draw opens!
              </p>
               {% endif %}
               </div>
            
          </div>
        </div>
      </div>
    </section>


    <!-- Secondary Lottery -->
    <section class="spotlight-section status-{{ lottery-1.status.value | handle }}">
      <div class="status-banner">
        <span class="status-value">{{ lottery-1.status.value }}</span>
      </div>
      <div class="spotlight-wrapper">
        <!-- Full-width heading row -->
        <div class="spotlight-heading-row">
          <h2 class="spotlight-heading">{{ lottery-1.heading.value }}</h2>
        </div>

        <!-- Two-column row -->
        <div class="spotlight-content-row">
          <!-- Image Column -->
          <div class="spotlight-column first-column">
            <div class="spotlight-image-wrapper">
              <img
                src="{{ lottery-1.image | image_url: width: auto, height: auto }}"
                alt="Expansion Image"
                class="spotlight-image"
              >
            </div>
          </div>

          <!-- Text Column -->
          <div class="spotlight-column last-column">
            <div class="spotlight-text">
              <p class="spotlight-description">
                {{ lottery-1.description.value }}
              </p>
            
            {% if lottery-1.status.value  == 'Entries now open' %}
            <div class="spotlight-button-wrapper">
              <p class="spotlight-description">Available to enter until <strong>{{ lottery-0.end_date | metafield_tag }}</strong></p>
              <a href="{{ lottery-1.page.value.url }}" class="spotlight-button">View</a>
              </div>
              {% elsif lottery-1.status.value  == 'Entries now closed'%}
              <p class="spotlight-description">
                This draw is now closed. Winners will be contacted by email - Good luck!
              </p>
              {% elsif lottery-1.status.value  == 'Available soon'%}
              <p class="spotlight-description">
                We plan to open entries to this draw <strong>{{ lottery-0.start_date.value }}</strong>. Sign up for our mailing list to be notified when the draw opens!
              </p>
               {% endif %}
               </div>
            
          </div>
        </div>
      </div>
    </section>



{% schema %}
  {
    "name": "current draw list",
    "settings": []
  }
{% endschema %}