{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'pokedecks-category-components.css' | asset_url | stylesheet_tag }}
{{ 'section-collection-banner.css' | asset_url | stylesheet_tag }}

{%- assign colour_one = collection.metafields.collection.colour_one | default: '#eacfc6' -%}
{%- assign colour_two = collection.metafields.collection.colour_two | default: '#d6e1e6' -%}

{%- style -%}

  .pokedecks-category__data-wrapper::before{
    background: linear-gradient(45deg, {{colour_one}}, {{colour_two}} );
  }

{%- endstyle -%}





<section class="hero-fullwidth">
  <div class="hero-background">
    <img class="background-image" src="{{ collection.image | image_url: width: 1920, height: 1080 }} " width= 100% height= 100%/>

  </div>
  <div class="foreground-container">
    <div class="flex-row-center">
      <img
          src="{{ collection.metafields.custom.logo.value | image_url: width: 450, height: 450 }}"
          width= 100%
          height= 100%
        />
    </div>
      <div class="flex-row-center">
    <div class="text-content-container">
        <div class="pokedecks-category__data-wrapper">
        <div class="collection-data-grid">
          <div class="collection-data-item">
            <h2 class="collection-data-title">{{ collection.metafields.collection.headline }}</h2>
          </div>
          <div class="collection-data-item">
            {{ collection.title }} is the {{ collection.metafields.collection.release_order }}
            Disney Lorcana set.


          </div>
          

          <div class="collection-data-cell">
            <p class="collection-data-subtitle"><strong>Release date</strong></p>
             {% if collection.metafields.collection.release_date %}
              <p class="collection-data-value">{{ collection.metafields.collection.release_date | metafield_tag }}</p>
              {% else %}
                <p class="collection-data-value">TBC</p>
            {% endif %}
          </div>
          <div class="collection-data-cell">
            <p class="collection-data-subtitle"><strong>Total card count</strong></p>
            {% if collection.metafields.collection.total_cards.value  %}
              <p class="collection-data-value">{{ collection.metafields.collection.total_cards.value }}</p>
              {% else %}
                <p class="collection-data-value">TBC</p>
            {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
</section>





