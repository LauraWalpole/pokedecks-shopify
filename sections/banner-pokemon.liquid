{{ 'pokedecks-category-components.css' | asset_url | stylesheet_tag }}
{% assign tcg = metaobjects.tcg.pokemon %}

<section class="section-white">
  <div class="isolate page-width">
    {{ section.settings.section_color_scheme }}
    <div class="pokedecks-category__image-container-darkshadow holo-card">
    <a href="/collections/{{ tcg.name | handle }}">
      <img
        src="{{ tcg.image | image_url: width: auto , height: auto }}"
      >
      </a>
    </div>
    
  </div>
</section>



{% schema %}
  {
    "name": "banner-pokemon",
    "settings": []
  }
{% endschema %}