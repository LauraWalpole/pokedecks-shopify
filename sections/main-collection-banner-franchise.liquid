{{ 'pokedecks-category-components.css' | asset_url | stylesheet_tag }}

{%- assign colour_one = collection.metafields.collection.colour_one | default: '#ff0000' -%}
{%- assign colour_two = collection.metafields.collection.colour_two | default: '#0000ff' -%}
{% assign franchise = metaobjects.tcg.pokemon %}

{%- style -%}
    @media screen and (max-width: 749px) {
      .pokedecks-category--with-image .pokedecks-category__inner {
        padding-bottom: calc({{ settings.media_shadow_vertical_offset | at_least: 0 }}px + 2rem);
      }
    }

    /* Pseudo-element used for gradient border */
  .pokedecks-category__data-wrapper::before{
    content: "";
    position: absolute;
    top: -6px;
    left: -6px;
    right: -6px;
    bottom: -6px;
    border-radius: 12px;
    background: linear-gradient(45deg, {{colour_one}}, {{colour_two}} );
    z-index: -2;
  }

  .collection-data-item-styled{
    color: #000;
  }
{%- endstyle -%}

{%- if section.settings.show_collection_image and collection.image -%}
  <section class="section-white">
    <div class="isolate page-width">
      <div class="pokedecks-category__image-container-darkshadow">
        <img
          src="{{ collection.image | image_url: width: 750, height: 500  }}"
          width= 100%
          height= 100%
        >
      </div>
    </div>
  </section>
{% endif %}
<section class="section-light-grey">
  <div class="isolate page-width">
    <div class="pokedecks-category__content-wrapper">
      <div class="pokedecks-category__text-wrapper">
        <h1 class="pokedecks-category__title">
          <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
          {{ franchise.headline }}
        </h1>

        {%- if section.settings.show_collection_description -%}
          <div class="pokedecks-category__description">{{ franchise.description }}</div>
        {%- endif -%}
      </div>
      <div class="pokedecks-category__data-wrapper">
        <div class="collection-data-grid">
          <div class="collection-data-item">
            <h2 class="collection-data-title">{{ franchise.name }} TCG information</h2>
          </div>
          <div class="collection-data-item-styled">
            <p class="collection-data-subtitle">
              <strong>Latest release: </strong> {{ franchise.latest_release_name }}
            </p>
            <p class="collection-data-value">Released on {{ franchise.latest_release_date | metafield_tag }}</p>
          </div>
          <div class="collection-data-item-styled">
            <p class="collection-data-subtitle"><strong>Next Release: </strong>{{ franchise.next_release_name }}</p>
            <p class="collection-data-value">Scheduled for release on {{ franchise.next_release_date | metafield_tag }}</p>
          </div>
          <div class="collection-data-item-styled">
            <p class="collection-data-subtitle"><strong>Standard format 2025: </strong>G, H</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "t:sections.main-collection-banner.settings.show_collection_description.label"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "t:sections.main-collection-banner.settings.show_collection_image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
